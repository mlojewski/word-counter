{% extends 'base.html.twig' %}

{% block title %}Talkative recruitment test{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    Word count = {{ wordCount }} <br />
    Average word length = {{ average }} <br />
    {% for key, result in resultArray %}
        The number of words of lenght {{ key }} is {{ result }} <br />
    {% endfor %}
    <br />

    {% for key, result in biggestOccurence %}
        The most frequently occurring word length is {{ key }} with word lenghts of {% for item in result %} {{ item }} {% if result|length > 1 %} & {% endif %} {% endfor %}.
    {% endfor %}

</div>
{% endblock %}
